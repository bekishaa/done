# Receipt Rocket Environment Template
# Copy to .env.local and fill values before running dev server

# Core App Config
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Database (MySQL)
# Format: mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=mysql://user:password@localhost:3306/receiptrocket

# NextAuth
NEXTAUTH_SECRET=replace-with-random-string
NEXTAUTH_URL=http://localhost:3000

# SMS Provider (AfroMessage)
AFRO_IDENTIFIER_ID=replace-with-identifier
AFRO_API_KEY=replace-with-api-key
AFRO_SENDER_NAME=GIHON
AFRO_DISABLE_SMS=true

# Optional
DISABLE_SMS=true
GOOGLE_AI_API_KEY=
